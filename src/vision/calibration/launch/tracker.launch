<launch>
    <node pkg="usb_cam" type="usb_cam_node" name="camera">
      <param name="video_device" value="/dev/video0"/>
      <param name="pixel_format" value="yuyv"/>
      <param name="width" value="640"/>
      <param name="height" value="480"/>
      <param name="camera_info_url" value="package://robots_config/camera_info/chest_camera.yaml"/>
      <param name="camera_name" value="chest_camera"/>
      <param name="camera_frame_id" value="chest_camera"/>
    </node>

    <node ns="camera" name="cam_calib" pkg="image_proc" type="image_proc" />

    <node pkg="calibration" name="calibration" type="tracker.py" output="screen">
        <rosparam>
            width: 1
            height: 1
            depth: 1
            cam_width: 640
            cam_height: 480
            hue_min: 20
            hue_max: 160
            sat_min: 100
            sat_max: 255
            val_min: 200
            val_max: 256
            input_image: camera/image_raw
            output_image: camera/image_track
            track_point: track_point
        </rosparam>
    </node>
</launch>
