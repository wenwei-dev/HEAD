    $SUDO pip2 install ${PIP_OPTS} pinyin==0.2.5

    # For speech2command
    $SUDO pip2 install ${PIP_OPTS} pyparsing

    # For performances
    $SUDO pip2 install transitions

    # For webui
    $SUDO pip2 install ${PIP_OPTS} flask EasyProcess psutil
}

